<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_paid_by_list_item_parent_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/main_paid_by_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toStartOf="@+id/textView9"
        android:gravity="center_vertical"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView9"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/main_paid_by_list_item_amount"
            android:gravity="center_vertical"
            android:text="Rs."
            android:textSize="20sp" />

        <TextView
            android:id="@+id/main_paid_by_list_item_amount"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>