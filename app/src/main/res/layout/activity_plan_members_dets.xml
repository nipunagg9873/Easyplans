<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.easyplans.plan_members_dets">

    <TextView
        android:id="@+id/plan_member_dets_plan_name"
        android:layout_width="368dp"
        android:layout_height="46dp"
        android:text="plan name"
        android:textSize="25sp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="10dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/plan_members_editmembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_Members"
        android:onClick="edit_members_clicked"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/plan_member_dets_plan_name"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ListView
        android:layout_width="368dp"
        android:id="@+id/plan_members_dets_list"
        android:layout_height="382dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="192dp"
        android:layout_height="45dp"
        android:text="@string/members"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/plan_member_dets_plan_name" />
</android.support.constraint.ConstraintLayout>
