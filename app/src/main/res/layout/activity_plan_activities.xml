<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/plan_name_activities_top"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:paddingLeft="10dp"
        android:text="Plan name"
        android:textSize="40sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/add_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="19dp"
        android:onClick="addclicked"
        android:text="Add"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintLeft_toRightOf="@+id/ah"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plan_name_activities_top" />

    <TextView
        android:id="@+id/ah"
        android:layout_width="232dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:paddingLeft="10dp"
        android:text="@string/activities"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/plan_name_activities_top"
        app:layout_constraintTop_toBottomOf="@+id/plan_name_activities_top" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="131dp"
        android:layout_height="43dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="13dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/name"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/ah"
        app:layout_constraintTop_toBottomOf="@+id/ah" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="123dp"
        android:layout_height="43dp"
        android:gravity="end"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="13dp"
        android:text="@string/cost_rs"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.967"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ah" />

    <ListView
        android:id="@+id/listview_activities"
        android:layout_width="345dp"
        android:layout_height="279dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.542"
        android:layout_marginLeft="8dp">

    </ListView>

</android.support.constraint.ConstraintLayout>